mixin SliderCard(config)
    .card.py-3.px-4.mt-3.h-100.box-shadow-2.border-0
        .card-body.pb-0
            h5.fs-1.font-base.lh-base !{config.title}
            p.mb-0.lh-base !{config.details}
        .card-footer.d-flex.justify-content-between.align-items-center.border-0.bg-white.pt-0
            span.badge.rounded-pill.bg-green.p-2.fs-0 5 AUT
            p.mb-0.fw-bold Apply by May 15
