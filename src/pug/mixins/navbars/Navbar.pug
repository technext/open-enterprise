mixin Navbar
  nav.navbar.navbar-expand-lg.navbar-light.fixed-top.py-3.backdrop(data-navbar-on-scroll)
    .container
      a.navbar-brand(href='#')
        img(src=`${CWD}assets/img/gallery/logo.png` alt=''  width="123").img-fluid

      button.navbar-toggler.collapsed(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
    
      #navbarSupportedContent.collapse.navbar-collapse.border-top.border-lg-0.mt-4.mt-lg-0
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item.px-2
            a.nav-link.fw-medium(aria-current='page', href='#' class= currentPage === 'index' ? 'active' : false ) Home
          li.nav-item.px-2
            a.nav-link.fw-medium(href='#features') Jobs
          li.nav-item.px-2
            a.nav-link.fw-medium(href='#pricing') Career tips
          
        form.d-flex
          button.btn.btn-lg.btn-primary.bg-gradient.order-0(type='submit') Sign Up
